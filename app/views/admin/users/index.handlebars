<div class="row">
    <div class="co-md-12 col-lg-12 mb-30">
        {{#if success }}
        <div class="alert alert-success" role="alert">
            <p>{{success}}</p>
        </div>
        {{/if}}
        <div class="box">
            <div class="d-flex justify-content-between box-head has-operation">
                <h4 class="title">لیست کاربران</h4>
                <div class="operations">
                    <a href="/admin/users/create" class="button button-primary">
                        <span><i class="zmdi zmdi-plus"></i>ایجاد کاربر جدید</span>
                    </a>
                </div>
            </div>
            <div class="box-body">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>نام</th>
                            <th>ایمیل</th>
                            <th>تاریخ ایجاد</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- iterate over array ( i < array.length ) -->
                        {{#each users}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>
                                <a href="#">{{this.full_name}}</a>
                            </td>
                            <td>{{this.email}}</td>
                            <td>{{this.created_at_persian}}</td>
                            <td>
                                <a href="/admin/users/edit/{{this.id}}">
                                    <i class="fa fa-pencil"></i>
                                </a>
                                <a href="/admin/users/delete/{{this.id}}">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>