<div class="row">
    <div class="co-md-12 col-lg-12 mb-30">
        <div class="box">
            <div class="box-head">
                <h4 class="title">ایجاد کاربر جدید</h4>
            </div>
            <div class="box-body">
                <div class="row mbn-20">

                    <!-- form field -->
                    <form action="/admin/users/store" method="POST">
                        <div class="col-lg-6 col-12 mb-20">
                            {{#if hasError }}
                            <div class="alert alert-outline-secondary" role="alert">
                                <p>خطا!</p>
                                {{#each errors}} 
                                <p>{{this}}</p>
                                {{/each}}
                            </div>
                            {{/if}}

                            <div class="row mbn-15">
                                <div class="col-12 mb-30">
                                    <input name="full_name" type="text" class="form-control" placeholder="نام کامل کاربر">
                                </div>
                                <div class="col-12 mb-30">
                                    <input name="email" type="email" class="form-control" placeholder="ایمیل کاربر">
                                </div>
                                <div class="col-12 mb-30">
                                    <input name="password" type="password" class="form-control" placeholder="کلمه عبور">
                                </div>
                                <div class="col-12 mb-30">

                                    <h6 class="mb-15">نقش کاربری</h6>

                                    <label><input type="radio" name="role" value="0" checked>کاربر</label>
                                    <label><input type="radio" name="role" value="1">نویسنده</label>
                                    <label><input type="radio" name="role" value="2">مدیر</label>

                                </div>
                                <div class="col-12 mb-30">
                                    <button type="submit" class="button button-primary"><span>ذخیره سازی</span></button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- form field -->

                </div>
            </div>
        </div>
    </div>
</div>